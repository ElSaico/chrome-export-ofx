{
  "manifest_version": 2,
  "name": "OFX Exporter",
  "description": "Exporta para OFX extratos dos cartões de crédito",
  "version": "1.0",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.americanexpressonline.com.br/*"
      ],
      "js": [
        "dist/amex.js"
      ]
    },
    {
      "matches": [
        "https://itaubankline.itau.com.br/*"
      ],
      "js": [
        "dist/itaucard.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "ofx.png"
  },
  "permissions": [
    "activeTab"
  ]
}